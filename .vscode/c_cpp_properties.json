{
    "env": {
        "IDF_TOOLS_PATH": "~/.espressif",
        "IDF_LIB_PATH": "~/esp/esp-idf-lib"
    },
    "configurations": [
        {
            "name": "ESP-IDF",
            "compilerPath": "${env:IDF_TOOLS_PATH}/tools/xtensa-esp-elf/esp-13.2.0_20230928/xtensa-esp-elf/bin/xtensa-esp32-elf-gcc",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json",
            "includePath": [
                "${env:IDF_PATH}/components/**",
                "${env:IDF_LIB_PATH}/components/**",
                "${workspaceFolder}/**"
            ],
            "browse": {
                "path": [
                    "${env:IDF_PATH}/components/**",
                    "${IDF_LIB_PATH}/components/**",
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": false
            }
        }
    ],
    "version": 4
}
